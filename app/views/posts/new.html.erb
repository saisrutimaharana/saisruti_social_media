<h1>NEW POST</h1>
<%= form_with(model: @post, local: true) do |form| %>
  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>
  
  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>
          
  <div class="field">
    <%= form.label :video %>
    <%= form.file_field :video %>
  </div>
  <div class="actions">
    <%= form.submit "Create Post" %>
  </div>
<% end %>


<%= link_to 'Back', posts_path %>